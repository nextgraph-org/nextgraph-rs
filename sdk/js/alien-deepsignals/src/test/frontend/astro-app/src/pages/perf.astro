---
import PerfSuiteClient from "../components/PerfSuiteClient";
import ReactPerfDeep from "../components/perf/react/ReactPerfDeep";
import ReactPerfNative from "../components/perf/react/ReactPerfNative";
import VuePerfDeep from "../components/perf/vue/VuePerfDeep.vue";
import VuePerfNative from "../components/perf/vue/VuePerfNative.vue";
import SveltePerfDeep from "../components/perf/svelte/SveltePerfDeep.svelte";
import SveltePerfNative from "../components/perf/svelte/SveltePerfNative.svelte";
import "../../../utils/state";

export const prerender = false;

const frameworkParam = Astro.url.searchParams.get("framework") ?? "react";
const variantParam = Astro.url.searchParams.get("variant") ?? "deep";

const frameworks = [
  {
    id: "react",
    variants: [
      { id: "deep", label: "React + deepSignal" },
      { id: "native", label: "React + native" },
    ],
  },
  {
    id: "vue",
    variants: [
      { id: "deep", label: "Vue + deepSignal" },
      { id: "native", label: "Vue + native" },
    ],
  },
  {
    id: "svelte",
    variants: [
      { id: "deep", label: "Svelte + deepSignal" },
      { id: "native", label: "Svelte + native" },
    ],
  },
];

const isFramework = (value: string): value is typeof frameworks[number]["id"] =>
  frameworks.some((framework) => framework.id === value);
const isVariant = (value: string): value is "deep" | "native" =>
  value === "deep" || value === "native";

const activeFramework = isFramework(frameworkParam) ? frameworkParam : "react";
const activeVariant = isVariant(variantParam) ? variantParam : "deep";

const selectionLinks = frameworks.flatMap((framework) =>
  framework.variants.map((variant) => ({
    framework: framework.id,
    variant: variant.id,
    label: variant.label,
  }))
);

const supportedCombos = new Set(
  selectionLinks.map((option) => `${option.framework}/${option.variant}`)
);
const hasPanel = supportedCombos.has(`${activeFramework}/${activeVariant}`);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>alien-deepsignals performance suite</title>
    <style>
      :root {
        color-scheme: light;
      }
      body {
        font-family: "Inter", system-ui, sans-serif;
        margin: 0;
        padding: 2rem;
        background: #f5f7fb;
        color: #1f2933;
      }
      header {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
      }
      header h1 {
        margin: 0;
        font-size: 1.75rem;
      }
      header p {
        margin: 0;
        color: #4b5563;
        max-width: 640px;
      }
      main {
        display: grid;
        grid-template-columns: minmax(360px, 680px);
        gap: 1.5rem;
      }
      .selector {
        display: flex;
        gap: 0.75rem;
        margin-bottom: 1rem;
        flex-wrap: wrap;
      }
      .selector-link {
        text-decoration: none;
        padding: 0.4rem 0.9rem;
        border-radius: 999px;
        border: 1px solid transparent;
        background: rgba(37, 99, 235, 0.1);
        color: #1d4ed8;
        font-weight: 600;
        transition: background 0.15s ease;
      }
      .selector-link--active {
        background: #2563eb;
        color: #fff;
        border-color: #1d4ed8;
      }
      .panel-host {
        display: contents;
      }
      .panel-host[hidden] {
        display: none !important;
      }
      .perf-panel {
        background: #ffffff;
        border-radius: 1.25rem;
        padding: 1.25rem;
        border: 1px solid rgba(15, 23, 42, 0.08);
        box-shadow: 0 18px 30px rgba(15, 23, 42, 0.06);
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }
      .perf-panel.placeholder p {
        margin: 0;
      }
      .perf-panel.react {
        background: linear-gradient(135deg, #eef2ff, #f9fafb);
        border-color: #c7d2fe;
      }
      .perf-panel.vue {
        background: linear-gradient(135deg, #ecfdf3, #fdfcf5);
        border-color: #bbf7d0;
      }
      .perf-panel.svelte {
        background: linear-gradient(135deg, #fff7ed, #fffdf7);
        border-color: #fed7aa;
      }
      .title {
        margin: 0;
        font-size: 1.4rem;
        text-transform: capitalize;
      }
      .render-meta {
        font-size: 0.9rem;
        color: #6b7280;
        margin-bottom: 0.5rem;
      }
      .field-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
        gap: 0.75rem;
      }
      .field {
        border: 1px solid rgba(15, 23, 42, 0.08);
        border-radius: 0.75rem;
        padding: 0.75rem;
        display: flex;
        flex-direction: column;
        gap: 0.4rem;
        background: rgba(255, 255, 255, 0.65);
      }
      legend {
        padding: 0 0.25rem;
        font-weight: 600;
        color: #374151;
      }
      input,
      button {
        font: inherit;
      }
      input[type="text"],
      input[type="number"],
      input[data-role] {
        border: 1px solid rgba(15, 23, 42, 0.2);
        border-radius: 0.5rem;
        padding: 0.35rem 0.5rem;
        background: #fff;
        color: inherit;
      }
      button {
        background: #2563eb;
        color: #fff;
        border: none;
        border-radius: 999px;
        padding: 0.35rem 0.85rem;
        cursor: pointer;
        transition: background 0.15s ease;
        margin-right: 0.25rem;
      }
      button:hover {
        background: #1d4ed8;
      }
      .stack {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
      }
      .value-list {
        list-style: none;
        padding: 0;
        margin: 0.25rem 0 0;
        display: flex;
        flex-wrap: wrap;
        gap: 0.4rem;
      }
      .value-list li {
        padding: 0.25rem 0.6rem;
        border-radius: 999px;
        font-size: 0.85rem;
        background: rgba(37, 99, 235, 0.14);
        color: #1d3a8a;
      }
      .vue .value-list li {
        background: rgba(16, 185, 129, 0.18);
        color: #065f46;
      }
      .svelte .value-list li {
        background: rgba(249, 115, 22, 0.2);
        color: #9a3412;
      }
      .object-row {
        display: grid;
        grid-template-columns: 1fr 1.2fr 1fr auto auto;
        gap: 0.5rem;
        align-items: center;
        padding: 0.35rem 0;
      }
      .object-id {
        font-weight: 600;
        color: #475569;
      }
    </style>
  </head>
  <body data-page="perf" >
    <header>
      <h1>Performance scenarios</h1>
      <p>
        This page keeps the tri-framework playground mounted while registering
        sequential perf scenarios via <code>window.perfSuite</code>. Tests call
        into those scenarios to collect render counts and durations using
        configurable mutation counts.
      </p>
    </header>
    <PerfSuiteClient client:load />
    <nav class="selector">
      {selectionLinks.map((option) => (
        <a
          href={`?framework=${option.framework}&variant=${option.variant}`}
          class={`selector-link${
            option.framework === activeFramework &&
            option.variant === activeVariant
              ? " selector-link--active"
              : ""
          }`}
          data-selector-link
          data-framework={option.framework}
          data-variant={option.variant}
          aria-current={
            option.framework === activeFramework &&
            option.variant === activeVariant
              ? "page"
              : "false"
          }
        >
          {option.label}
        </a>
      ))}
    </nav>
    <main>
      <div
        class="panel-host"
        data-panel="react/deep"
        data-framework="react"
        data-variant="deep"
        hidden={!(activeFramework === "react" && activeVariant === "deep")}
      >
        <ReactPerfDeep client:only="react" />
      </div>
      <div
        class="panel-host"
        data-panel="react/native"
        data-framework="react"
        data-variant="native"
        hidden={
          !(activeFramework === "react" && activeVariant === "native")
        }
      >
        <ReactPerfNative client:only="react" />
      </div>
      <div
        class="panel-host"
        data-panel="vue/deep"
        data-framework="vue"
        data-variant="deep"
        hidden={!(activeFramework === "vue" && activeVariant === "deep")}
      >
        <VuePerfDeep client:only="vue" />
      </div>
      <div
        class="panel-host"
        data-panel="vue/native"
        data-framework="vue"
        data-variant="native"
        hidden={!(activeFramework === "vue" && activeVariant === "native")}
      >
        <VuePerfNative client:only="vue" />
      </div>
      <div
        class="panel-host"
        data-panel="svelte/deep"
        data-framework="svelte"
        data-variant="deep"
        hidden={!(activeFramework === "svelte" && activeVariant === "deep")}
      >
        <SveltePerfDeep client:only="svelte" />
      </div>
      <div
        class="panel-host"
        data-panel="svelte/native"
        data-framework="svelte"
        data-variant="native"
        hidden={!(activeFramework === "svelte" && activeVariant === "native")}
      >
        <SveltePerfNative client:only="svelte" />
      </div>
      <div
        class="panel-host"
        data-panel-placeholder
        hidden={hasPanel}
      >
        <div class="perf-panel placeholder">
          <p>
            The combination {activeFramework}/{activeVariant} is not ready yet.
            Choose another option above.
          </p>
        </div>
      </div>
    </main>
    <script is:inline>
      (() => {
        if (typeof window === "undefined") return;
        const navLinks = Array.from(
          document.querySelectorAll("[data-selector-link]")
        );
        const panels = Array.from(
          document.querySelectorAll("[data-panel]")
        );
        const placeholder = document.querySelector(
          "[data-panel-placeholder]"
        );
        if (!navLinks.length || !panels.length) return;

        const defaultFramework = navLinks[0]?.dataset.framework ?? "react";
        const defaultVariant = navLinks[0]?.dataset.variant ?? "deep";

        const setActive = (framework, variant, pushState = false) => {
          const key = `${framework}/${variant}`;
          let hasMatch = false;
          panels.forEach((panel) => {
            if (!panel.dataset.panel) return;
            const match = panel.dataset.panel === key;
            panel.toggleAttribute("hidden", !match);
            panel.dataset.active = match ? "true" : "false";
            if (match) hasMatch = true;
          });
          navLinks.forEach((link) => {
            const match =
              link.dataset.framework === framework &&
              link.dataset.variant === variant;
            link.classList.toggle("selector-link--active", match);
            link.setAttribute("aria-current", match ? "page" : "false");
          });
          if (placeholder) {
            placeholder.toggleAttribute("hidden", hasMatch);
            placeholder.dataset.active = hasMatch ? "false" : "true";
          }
          if (pushState) {
            const url = new URL(window.location.href);
            url.searchParams.set("framework", framework);
            url.searchParams.set("variant", variant);
            window.history.pushState({ framework, variant }, "", url);
          }
        };

        const getStateFromUrl = () => {
          const url = new URL(window.location.href);
          const framework = url.searchParams.get("framework") ?? defaultFramework;
          const variant = url.searchParams.get("variant") ?? defaultVariant;
          return { framework, variant };
        };

        const { framework: initialFramework, variant: initialVariant } =
          getStateFromUrl();
        setActive(initialFramework, initialVariant, false);

        navLinks.forEach((link) => {
          link.addEventListener("click", (event) => {
            event.preventDefault();
            const framework = link.dataset.framework ?? defaultFramework;
            const variant = link.dataset.variant ?? defaultVariant;
            setActive(framework, variant, true);
          });
        });

        window.addEventListener("popstate", () => {
          const { framework, variant } = getStateFromUrl();
          setActive(framework, variant, false);
        });
      })();
    </script>
  </body>
</html>
