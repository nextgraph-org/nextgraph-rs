<script>
    import {init as initNg, sessionPromise} from "../../utils/ngSession";

    let crdt = import.meta.env.NG_CRDT;
    initNg(crdt);

    // Only show screen once ng is initialized.
    sessionPromise.then(() => {
        document.querySelector<HTMLElement>(".astro")!.style.display = "block";
    })
</script>

<Layout>
    <div id="framework-grid" class="framework-grid">
        <div class="framework-card">
            <Highlight vue>
                <VueRoot client:only="vue" />
            </Highlight>
        </div>

        <div class="framework-card">
            <Highlight react>
                <ReactRoot client:only="react" />
            </Highlight>
        </div>

        <div class="framework-card">
            <Highlight svelte>
                <SvelteRoot client:only="svelte" />
            </Highlight>
        </div>

        <div class="framework-card">
            <Highlight svelte4>
                {/* @ts-ignore */}
                <Svelte4Root client:only="svelte4" />
            </Highlight>
        </div>
    </div>
</Layout>
